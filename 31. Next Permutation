class Solution {
    public void nextPermutation(int[] a) {
        int idx1=-1;
        int idx2=-1;

        for(int i=a.length-2;i>=0;i--){
            if(a[i]<a[i+1]){
                idx1=i;
                break;
            }
        }
        if(idx1==-1){
        reverse(a,0);
        }else{

            for(int i=a.length-1;i>=0;i--){
                if(a[i]>a[idx1]){
                    idx2=i;
                    break;
                }
            }
            swap(a,idx1,idx2);
            reverse(a,idx1+1);
        } 
    }
    void swap(int a[],int i,int j){
        int temp=a[i];
        a[i]=a[j];
        a[j]=temp;
    }
    void reverse(int a[],int start){
        int i=start;
        int j=a.length-1;
        while(i<j){
            swap(a,i,j);
            i++;
            j--;
        }
    }
}
